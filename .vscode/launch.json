  "version": "0.2.0",
  "configurations": [
    {
			"name": "Launch Client",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}/meteor/vscode"
			],
			"outFiles": [
				"${workspaceRoot}/*/*/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		}
  ]
}