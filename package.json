{
	"private": true,
	"scripts": {
		"build": "tsc -b tsconfig.build.json",
		"watch": "npm run build && (npm run watch:base & npm run watch:vscode)",
		"watch:base": "tsc -b tsconfig.build.json -w",
		"watch:vscode": "cd ./meteor/vscode && npm run watch",
		"version:test": "lerna version --exact --force-publish --yes --sync-workspace-lock --no-push --no-git-tag-version"
	},
	"devDependencies": {
		"@types/node": "latest",
		"typescript": "latest",
		"vite": "latest"
	},
	"optionalDependencies": {
	},
	"pnpm": {
		"overrides": {
			"esbuild": "0.15.18"
		}
	}
}
